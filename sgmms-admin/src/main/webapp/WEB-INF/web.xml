<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	
	<display-name>tds-framework</display-name>
	
	<!-- spring基本配置 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath*:/tds/applicationContext.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>corsFilter</filter-name>
		<filter-class>com.tisson.sgmms.api.filter.CorsFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>corsFilter</filter-name>
		<url-pattern>/api/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>claimsFilter</filter-name>
		<filter-class>com.tisson.sgmms.api.filter.ClaimsFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>claimsFilter</filter-name>
		<url-pattern>/api/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>openEntityManagerInViewFilter</filter-name>
		<filter-class>org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>openEntityManagerInViewFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	
	<!-- 登录过滤器 -->
	<filter>
		<filter-name>loginFilter</filter-name>
		<filter-class>com.tisson.tds.login.filter.LoginFilter</filter-class>
		<!-- <init-param>
			<param-name>appName</param-name>
			<param-value>tds-framework</param-value>
		</init-param> -->
	</filter>
	<filter-mapping>
		<filter-name>loginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- spring mvc配置 -->
	<servlet>
		<servlet-name>springServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath*:/tds/spring-mvc.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>springServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<!-- session监听器 -->
	<listener>
		<listener-class>com.tisson.tds.login.listener.SessionListener</listener-class>
	</listener>

	<!-- 启动群集
	<servlet>
		<servlet-name>clusterServlet</servlet-name>
		<servlet-class>sxma.cluster.ClusterServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>-->
	
	
	<!-- Restlet adapter, used to expose modeler functionality through REST -->
    <servlet>
        <servlet-name>ExplorerRestletServlet</servlet-name>
        <servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
        <init-param>
            <!-- Application class name -->
            <param-name>org.restlet.application</param-name>
            <param-value>org.activiti.explorer.rest.ExplorerRestApplication</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>RestletServlet</servlet-name>
        <servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
        <init-param>
            <!-- Application class name -->
            <param-name>org.restlet.application</param-name>
            <param-value>org.activiti.rest.service.application.ActivitiRestServicesApplication</param-value>
        </init-param>
    </servlet>
    
    <!-- Catch all service requests -->
	<servlet-mapping>
		<servlet-name>ExplorerRestletServlet</servlet-name>
		<url-pattern>/service/*</url-pattern>
	</servlet-mapping>

    <servlet-mapping>
        <servlet-name>RestletServlet</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    
	

	<!-- session过期时间 -->
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
	
	<!-- 出错页面定义 -->
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/views/tds/error/500.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/views/tds/error/500.jsp</location>
	</error-page>
<!-- 	<error-page> -->
<!-- 		<error-code>404</error-code> -->
<!-- 		<location>/WEB-INF/views/tds/error/404.jsp</location> -->
<!-- 	</error-page> -->
	
	<!-- 自定义标签 -->
    <jsp-config>
        <taglib>
            <taglib-uri>/tags/dictionary.tld</taglib-uri>
            <taglib-location>/WEB-INF/tags/dictionary.tld</taglib-location>
        </taglib>
        
        <taglib>
            <taglib-uri>/tags/operation-right.tld</taglib-uri>
            <taglib-location>/WEB-INF/tags/operation-right.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>