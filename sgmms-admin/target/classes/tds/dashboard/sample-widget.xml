	<bean id="clock" class="com.tisson.tds.dashboard.widget.ClockWidget"
		parent="widgetVo" scope="prototype">
		<property name="id" value="digitClock" />
		<property name="clockId" value="clock" />
		<property name="sizeX" value="2" />
		<property name="sizeY" value="1" />
		<property name="sysJS">
			<list>
				<value>tds/static/dashboard/clock/moment.min.js</value>
				<value>tds/static/dashboard/clock/clock.js</value>
			</list>
		</property>
		<property name="sysCSS">
			<list>
				<value>tds/static/dashboard/clock/clock.css</value>
			</list>
		</property>
		<property name="widgetHtml">
			<value>
				<![CDATA[
		<div id="${id}"  style="display:none;z-index:-100">
	        <div id="${clockId}" class="light">
				<div class="display">
					<div class="date"></div>
					<div class="digits"></div>
				</div>
			</div>
		</div>
				]]>
			</value>
		</property>
		<property name="initEndJS">
			<value>
				<![CDATA[
    	$('#${clockId}').clock();
				]]>
			</value>
		</property>
	</bean>
