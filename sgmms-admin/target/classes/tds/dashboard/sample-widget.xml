	<bean id="demoSlider" class="com.tisson.tds.dashboard.widget.SliderWidget"
		parent="widgetVo" scope="prototype">
		<property name="id" value="demoSlider" />
		<property name="widgetId" value="slider" />
		<property name="sizeX" value="3" />
		<property name="sizeY" value="3" />
		<property name="sysCSS">
			<list>
				<value>tds/static/dashboard/slider/css/jquery.slideBox.css</value>
			</list>
		</property>
		<property name="sysJS">
			<list>
				<value>tds/static/dashboard/slider/js/jquery.slideBox.js</value>
			</list>
		</property>
		<property name="widgetHtml">
			<value>
				<![CDATA[
		<div id="${id}"  style="display:none;z-index:-100">
			<div id="${widgetId}" class="slideBox">
			  <ul class="items">
<#list silders as silder> 
			    <li><a href="${silder.href}">
			    	<div><img src="${silder.backgroundImage}">
			    	${silder.html}</div>
			    </a></li>
</#list>
			  </ul>
			</div>
		</div>
				]]>
			</value>
		</property>
		<property name="initEndJS">
			<value>
				<![CDATA[
				$('#${widgetId}').slideBox({
					direction : '${direction}',
					duration : ${duration},
					easing : '${easing}',
					delay : ${delay},
					startIndex : 0,
					hideBottomBar : ${hideBottomBar}
				});
				]]>
			</value>
		</property>
		<property name="silders">
			<list>
				<bean class="com.tisson.tds.dashboard.widget.Slider">
						<property name="backgroundImage" value="${ctx}/tds/static/dashboard/slider/img/1.jpg"/>
						<property name="html">
							<value>
				<![CDATA[<div style="position: absolute; left: 0px;top: 0px;">					
						<table border="0" style="width:100%;border-collapse:separate;border-spacing:10px;text-align:center;">
											<caption>
											<p style="text-align: center;"><strong><span style="color:white"><span style="font-size:22px">mashuanxiang-pc</span></span></strong></p>
											</caption>
											<tbody>
												<tr>
													<td><font size="10" color="white">2</font></td>
													<td><font size="10" color="white">4</font></td>
												</tr>
												<tr>
													<td><font size="6" color="white">在线用户数</font></td>
													<td><font size="6" color="white">登录次数</font></td>
												</tr>
											</tbody>
										</table>
					</div>]]>
						</value>
						</property>
				</bean>
				<bean class="com.tisson.tds.dashboard.widget.Slider">
						<property name="backgroundImage" value="${ctx}/tds/static/dashboard/slider/img/2.jpg"/>
				</bean>
				<bean class="com.tisson.tds.dashboard.widget.Slider">
						<property name="backgroundImage" value="${ctx}/tds/static/dashboard/slider/img/3.jpg"/>
				</bean>
				<bean class="com.tisson.tds.dashboard.widget.Slider">
						<property name="backgroundImage" value="${ctx}/tds/static/dashboard/slider/img/4.jpg"/>
				</bean>
				<bean class="com.tisson.tds.dashboard.widget.Slider">
						<property name="backgroundImage" value="${ctx}/tds/static/dashboard/slider/img/5.jpg"/>
				</bean>
			</list>
